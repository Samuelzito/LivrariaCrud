<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.livraria.controller.BookFormController">
    <children>
        <VBox alignment="CENTER" layoutY="-6.0" prefHeight="397.0" prefWidth="516.0" spacing="10">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Cadastro de Livro" />
            <TextField fx:id="txtTitulo" promptText="Título" />
            <TextField fx:id="txtAutor" promptText="Autor" />
            <TextField fx:id="txtAnoPublicacao" promptText="Ano de Publicação" />
            <TextField fx:id="txtGenero" promptText="Gênero" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#saveBook" text="Salvar" />
                <Button onAction="#cancelAction" text="Cancelar" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
