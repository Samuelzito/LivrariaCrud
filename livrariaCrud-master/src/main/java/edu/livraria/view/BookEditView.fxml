<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.livraria.controller.BookEditController" alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 20;">
    <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Ano de Publicação:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtAnoPublicacao" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Gênero:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="txtGenero" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Salvar" onAction="#salvar" />
        <Button text="Cancelar" onAction="#cancelar" />
    </HBox>
</GridPane>
