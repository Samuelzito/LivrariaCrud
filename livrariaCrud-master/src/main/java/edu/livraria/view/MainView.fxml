<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #00000000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.livraria.controller.MainController">
    <children>
        <!-- Menu Bar -->
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Cadastros">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuCadastrarLivro" text="Cadastrar Livro" />
                        <MenuItem mnemonicParsing="false" onAction="#menuListarLivros" text="Listar Livros" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuHelp" text="Sobre" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- Área para carregar as outras telas -->
        <AnchorPane fx:id="contentArea" prefHeight="400.0" prefWidth="600.0" />
    </children>
</VBox>
